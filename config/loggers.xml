<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%m%n%n"/>
		</layout>
	</appender>
	<appender name="FILE" class="org.apache.log4j.FileAppender">
		<param name="file" value="/home/log/${logfilename}.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%t] %p %d %c %x %m%n" />
		</layout>
	</appender>
	
	<appender name="ROLLING_FILE" class="org.apache.log4j.RollingFileAppender"> 
	    <param name="file" value="/home/log/${logfilename}.log"/>
	    <param name="MaxFileSize" value="40MB"/>
	    <!-- Keep one backup file -->
	    <param name="MaxBackupIndex" value="4"/>
	    <layout class="org.apache.log4j.PatternLayout"> 
	    	<param name="ConversionPattern" value="[%t] %p %d %c %x %m%n"/> 
	    </layout> 
  	</appender> 
	
	<appender name="SOCKET" class="org.apache.log4j.net.SocketAppender">
		<param name="RemoteHost" value="192.168.7.29"></param>
		<param name="Port" value="4713"></param>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%t] %p %d %c %x %m%n" />
		</layout>
	</appender>
	
	<category name="alg">
		<level value="INFO" />
		<appender-ref ref="CONSOLE"/>
		<appender-ref ref="ROLLING_FILE"/>
	</category>
	<category name="app">
		<level value="INFO" />
		<appender-ref ref="CONSOLE"/>
		<appender-ref ref="ROLLING_FILE"/>
	</category>	
	<category name="net">
		<level value="INFO" />
		<appender-ref ref="CONSOLE"/>
 		<appender-ref ref="ROLLING_FILE"/>

	</category>
	<category name="pkt">
		<level value="INFO" />
		<appender-ref ref="CONSOLE"/>
		<appender-ref ref="ROLLING_FILE"/>

	</category>	
	<category name="flow">
		<level value="INFO" />
		<appender-ref ref="CONSOLE"/>
		<appender-ref ref="ROLLING_FILE"/>
	</category>	
</log4j:configuration>	